<?xml version='1.0' encoding='utf-8'?>
<widget id="com.WZFP.TheMaynards" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WZFP 90.1FM</name>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-screen-orientation" version="3.0.2" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <icon src="www/512.jpg" density="ldpi" />
<icon src="www/512.jpg" density="mdpi" />
<icon src="www/512.jpg" density="hdpi" />
<icon src="www/512.jpg" density="xhdpi" />
<icon src="www/512.jpg" density="xxhdpi" />
<icon src="www/512.jpg" density="xxxhdpi" />
<preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/512.jpg" />

        <preference name="AndroidWindowSplashScreenBackground" value="#000000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <preference name="SwiftVersion" value="5.3" />

        <icon src="www/512.jpg" width="180" height="180" />
<icon src="www/512.jpg" width="60" height="60" />
<icon src="www/512.jpg" width="120" height="120" />
<icon src="www/512.jpg" width="76" height="76" />
<icon src="www/512.jpg" width="152" height="152" />
<icon src="www/512.jpg" width="40" height="40" />
<icon src="www/512.jpg" width="80" height="80" />
<icon src="www/512.jpg" width="57" height="57" />
<icon src="www/512.jpg" width="114" height="114" />
<icon src="www/512.jpg" width="72" height="72" />
<icon src="www/512.jpg" width="144" height="144" />
<icon src="www/512.jpg" width="167" height="167" />
<icon src="www/512.jpg" width="29" height="29" />
<icon src="www/512.jpg" width="58" height="58" />
<icon src="www/512.jpg" width="87" height="87" />
<icon src="www/512.jpg" width="50" height="50" />
<icon src="www/512.jpg" width="20" height="20" />
<icon src="www/512.jpg" width="100" height="100" />
<icon src="www/512.jpg" width="167" height="167" />
<icon src="www/512.jpg" width="1024" height="1024" />

    </platform>

    <preference name="AndroidXEnabled" value="true" />

    <preference name="BackgroundColor" value="0xff000000"/>

    <!-- Android Fullscreen -->
    <preference name="Fullscreen" value="true" />

    <!-- Cordova/Phonegap version -->
    <preference name="phonegap-version" value="cli-9.0.0" />

    
</widget>
